{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "declaration": true,
        "declarationDir": "dist",
        "emitDeclarationOnly": false,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "strict": true,
        "outDir": "dist",
        "baseUrl": "src"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
